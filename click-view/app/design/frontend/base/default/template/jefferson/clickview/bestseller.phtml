			         		</a>
							
							<figcaption>
								 
								 <a href="<?php echo $item->getProductUrl() ?>" 
					             	title="<?php echo $this->stripTags($this->getImageLabel($item, 'small_image'), null, true) ?>"
					             	class="product-image">   
					                	<?php echo $item->getName(); ?>
					             </a>	
					             
					             <?php echo $this->getPriceHtml($item, true) ?>
					             
					             <div class="product-secondary">
								 														              	
